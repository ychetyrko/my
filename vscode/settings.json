{
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "custom",
    "customizeUI.titleBar": "inline",
    "customizeUI.activityBar": "wide",
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Nezaboodka",
    "workbench.sideBar.location": "left",
    "editor.fontFamily": "Consolas, JetBrains Mono, Ubuntu Mono, monospace, 'Courier New'",
    "editor.fontSize": 22,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.folding": false,
    "editor.lineNumbers": "off",
    "editor.renderLineHighlight": "none",
    "editor.renderIndentGuides": false,
    "editor.smoothScrolling": true,
    "editor.autoClosingBrackets": "never",
    "editor.codeLens": true,
    "editor.semanticHighlighting.enabled": false,
    "editor.minimap.enabled": false,
    "editor.fastScrollSensitivity": 7,
    "editor.mouseWheelScrollSensitivity": 0.5,
    "workbench.tree.renderIndentGuides": "onHover",
    "workbench.tree.indent": 12,
    "zenMode.fullScreen": true,
    "zenMode.hideActivityBar": true,
    "zenMode.hideStatusBar": true,
    "zenMode.hideTabs": true,
    "zenMode.restore": false,
    "zenMode.centerLayout": false,
    "markdown.preview.fontSize": 32,
    "terminal.integrated.fontSize": 18,
    "terminal.integrated.rendererType": "experimentalWebgl",
    "workbench.startupEditor": "none",
    "git.autorefresh": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "typescript.updateImportsOnFileMove.enabled": "never",
    "typescript.autoClosingTags": false,
    "javascript.autoClosingTags": false,
    "html.autoClosingTags": false,
    "dotnet-test-explorer.autoExpandTree": true,
    "breadcrumbs.enabled": true,
    "csharp.referencesCodeLens.enabled": false,
    "C_Cpp.updateChannel": "Insiders",
    "editor.largeFileOptimizations": false,
    "files.exclude": {
        "**/node_modules": true
    },
    "debug.console.collapseIdenticalLines": false,
    "extensions.ignoreRecommendations": false,
    "window.zoomLevel": 0,
    "diffEditor.ignoreTrimWhitespace": false,
    "gitlens.codeLens.enabled": false,
    "cSpell.userWords": [
        "Chetyrko",
        "Yury",
        "ychetyrko"
    ],
    "diffEditor.renderSideBySide": true,
}
